{
  "name": "wearesho-team/platon",
  "description": "Platon integration",
  "type": "library",
  "require": {
    "php": ">=7.1",
    "guzzlehttp/guzzle": "^6.3",
    "horat1us/environment-config": "^1.2",
    "nekman/luhn-algorithm": "^4.0",
    "nesbot/carbon": "^1.29",
    "wearesho-team/bobra-payments": "^1.5"
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^2.6",
    "phpunit/phpunit": "^7.1",
    "squizlabs/php_codesniffer": "^3.3.2"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Alexander Letnikow",
      "email": "reclamme@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Wearesho\\Bobra\\Platon\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Wearesho\\Bobra\\Platon\\Tests\\": "tests/"
    }
  },
  "config": {
    "process-timeout": 1800,
    "sort-packages": true,
    "platform": {
      "php": "7.1"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR2 ./src ./tests",
    "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
    "cover": "phpunit --coverage-clover=coverage.xml",
    "test": "phpunit",
    "post-install-cmd": "cghooks add --ignore-lock",
    "post-update-cmd": "cghooks update"
  },
  "extra": {
    "hooks": {
      "pre-commit": [
        "composer lint",
        "composer test"
      ],
      "post-merge": "composer update --lock"
    }
  }
}
